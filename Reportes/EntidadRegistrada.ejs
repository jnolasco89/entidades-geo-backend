<html>

<head>
    <link href="<%= dirFonts %>">
    <style>
        .fila {
            width: 100%;
            justify-content: center;
            padding-top: 6px;
            padding-bottom: 6px;
            margin: 0px auto;
            display: inline-block;
        }

        .col {
            float: left;
        }

        .col-1 {
            width: 8.33%;
        }

        .col-2 {
            width: 16.66%;
        }

        .col-3 {
            width: 24.99%;
        }

        .col-4 {
            width: 33.32%;
        }

        .col-5 {
            width: 42.65%;
        }

        .col-6 {
            width: 49.98%;
        }

        .col-7 {
            width: 58.31%;
        }

        .col-8 {
            width: 66.64%;
        }

        .col-9 {
            width: 74.97%;
        }

        .col-10 {
            width: 83.30%;
        }

        .col-11 {
            width: 91.63%;
        }

        .col-12 {
            width: 99.99%;
        }

        .fila-espacio {
            width: 100%;
            height: 10px;
        }

        .formulario>h4 {
            margin: 0px;
        }

        .formulario>hr {
            width: 100%;
        }

        .formulario .fila {
            text-align: left;
        }

        .simple-lista {
            list-style: none;
            margin: 0px;
            padding-left: 0px;
        }

        .logoEncabezado {
            height: 50px;
        }

        .titulo-encabezado {
            text-align: center;
            font-size: 14px;
        }

        .encabezado-formulario {
            font-size: 10px;
        }

        .contenido-formulario {
            font-size: 9px;
        }
    </style>
</head>

<body>
    <div class="fila">
        <div class="col col-1">
            <img class="logoEncabezado"
                src="<%= dirImg %>" alt="LogoConna">
        </div>
        <div class="col col-10">
            <h3 class="titulo-encabezado">Reporte de entidad registrada</h3>
        </div>
    </div>
    <div class="fila-espacio"></div>
    <div class="formulario">
        <div class="encabezado-formulario">
            <h4>Datos Generales</h4>
            <hr>
        </div>
        <div class="contenido-formulario">
            <div class="fila">
                <div class="col col-2">Nombre:</div>
                <div class="col col-9"><%= entidad.nombre %></div>
            </div>
            <div class="fila">
                <div class="col col-2">Tipologia:</div>
                <div class="col col-9"><%= entidad.tipologiaTexto %></div>
            </div>
        </div>
    </div>
    <div class="fila-espacio"></div>
    <div class="formulario">
        <div class="encabezado-formulario">
            <h4>Sedes entidad</h4>
            <hr>
        </div>
        <div class="contenido-formulario">
            <% entidad.sedes.forEach(function(sede){ %>
            <%= sede.municipio.MunicipioLbl %>,&nbsp;<%= sede.departamento.DepartamentoLbl %><% if(sede.tipo.id==1){%>&nbsp;<b>(<%= sede.tipo.nombre %>)</b><%}%>
            <hr>
            <div class="fila">
                <div class="col col-6">
                    <div class="formulario">
                        <div class="fila">
                            <div class="col col-1"><i class="fas fa-map-marker-alt"></i></div>
                            <div class="col col-11"><b>Direccion:</b></div>
                            <div class="col col-12"><%= sede.direccion %></div>
    </div>
    <div class="fila">
        <div class="col col-1"><i class="fas fa-phone"></i></div>
        <div class="col col-11"><b>Datos de contacto:</b></div>
        <div class="col col-12">
            <% if(sede.contactos!=undefined?sede.contactos!=null:sede.contactos.length>0){ %>
            <% sede.contactos.forEach(function(contactos){ %>
            <div class="fila">
                <% if(contactos.contactos.length>1){ %>
                <div class="col col-3"><%= contactos.nombreP %>:</div>
                <% }else{ %>
                <div class="col col-3"><%= contactos.nombreS %>:</div>
                <% } %>
                <div class="col col-9">
                    <ul class="simple-lista">
                        <% contactos.contactos.forEach(function(c){ %>
                        <li><%= c %></li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <% });%>
            <% } else { %>
            Sin datos de contacto
            <% } %>
        </div>
    </div>
    </div>
    </div>
    <div class="col col-5">
        <div class="formulario">
            <div class="fila">
                <div class="col col-1"><i class="fas fa-map-marker-alt"></i></div>
                <div class="col col-11"><b>Personas de contacto:</b></div>
                <br>
            <% sede.personasDeContacto.forEach(function(persona,index){ %>
                <div class="col col-12">
                    <%= persona.nombreCompleto %>
                    <% if(persona.contactos!=undefined?persona.contactos!=null:persona.contactos.length>0){ %>
                        <% persona.contactos.forEach(function(contactos){ %>
                        <div class="fila">
                            <% if(contactos.contactos.length>1){ %>
                            <div class="col col-3"><%= contactos.nombreP %>:</div>
                            <% }else{ %>
                            <div class="col col-3"><%= contactos.nombreS %>:</div>
                            <% } %>
                            <div class="col col-9">
                                <ul class="simple-lista">
                                    <% contactos.contactos.forEach(function(c){ %>
                                    <li><%= c %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        </div>
                        <% });%>
                        <% } else { %>
                        Sin datos de contacto
                        <% } %>
                </div>
                <% if(sede.personasDeContacto.length>1 && index<sede.personasDeContacto.length-1){ %> 
                <div class="col col-12">      
                <hr>
                </div>
                <% } %>
            <% }); %>
            </div>
        </div>
    </div>
    </div>
    <hr>
    <% }); %>
    </div>
    </div>

</body>

</html>